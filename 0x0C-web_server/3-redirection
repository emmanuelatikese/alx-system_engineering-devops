#!/usr/bin/env bash
# This is all about the redirection

sudo apt update -y
sudo apt install nginx -y
sudo chown \$USER:\$USER /etc/nginx/sites-available/
mkdir -p /var/www/html
sudo chmod -R 755 /var/www
sudo chown -R \$USER:\$USER /var/www/html
echo "Hello World!" > /var/www/html/index.html
sed -i '/server {/a \        location \/redirect_me {\n                return 301 https:\/\/www.youtube.com\/watch?v=QH2-TGUlwu4;\n        }' /etc/nginx/sites-available/default
sudo systemctl restart nginx
