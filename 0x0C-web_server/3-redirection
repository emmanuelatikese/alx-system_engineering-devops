#!/usr/bin/env bash
# Update package list
sudo apt update

# Install Nginx if not already installed
sudo apt install -y nginx

# Define the configuration file path
config_file="/etc/nginx/sites-available/default"

# Configure redirection in Nginx
echo "Configuring Nginx redirection..."
sudo sed -i '/location \/ {/a \\tlocation /redirect_me {\\n\\t\\treturn 301 http://your_redirect_url;\\n\\t}' "$config_file"

# Test Nginx configuration
sudo nginx -t

# Reload Nginx to apply the changes
sudo systemctl reload nginx

echo "Redirection configured successfully. Access /redirect_me to test the redirection."

