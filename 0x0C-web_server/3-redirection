#!/usr/bin/env bash
# Step 1: Install Nginx web server (assuming you have the 1-install_nginx_web_server script)
source ./1-install_nginx_web_server.sh

cat <<EOL > /etc/nginx/sites-available/redirect_me
server {
    listen 80;
    server_name your_domain.com; # Replace with your actual domain

    location /redirect_me {
        return 301 http://new_destination.com; # Replace with your desired destination URL
    }

    # Additional server configuration goes here

    error_page 404 /404.html;
    location = /404.html {
        root /usr/share/nginx/html;
        internal;
    }

    # Include additional site configurations
    include /etc/nginx/sites-enabled/*;
}
EOL

ln -s /etc/nginx/sites-available/redirect_me /etc/nginx/sites-enabled/

nginx -t

systemctl reload nginx
